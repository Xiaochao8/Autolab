<li>
  <b><%= announcement.title %></b><br>
  <%= announcement.description %><br>
  <% if (@cud.instructor? && @cud.course_id == announcement.course_id) || @cud.administrator? then %>
    <%= link_to [:edit, @course, announcement] do %>
      <span class="btn small">Edit</span>
    <% end %>
    <%= link_to [@course, announcement], method: :delete, 
      data: {confirm: Sgtn.t('announcements.Are.you.sure.you.want.to.delete.this.announcement', 'views')} do %>
      <span class="btn small">Delete</span>
    <% end %>
  <% end %>
</li>
