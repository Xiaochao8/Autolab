<%= f.email_field :email, disabled: true, placeholder: Sgtn.t('users.johndoe.example.com', 'views') %>
	
<%= f.text_field :first_name, placeholder: Sgtn.t('users.John', 'views') %>

<%= f.text_field :last_name, placeholder: Sgtn.t('users.Doe', 'views') %>

<% if current_user.administrator? %>
	<%= f.text_field :school, placeholder: Sgtn.t('users.School.of.Computer.Science', 'views') %>

	<%= f.text_field :major, placeholder: Sgtn.t('users.Computer.Science', 'views') %>

	<%= f.check_box :administrator, help_text: "Administrators have total access to change anything in the system." %>
<% else %>
	<%= f.text_field :school, disabled: true, placeholder: Sgtn.t('users.School.of.Computer.Science', 'views') %>

	<%= f.text_field :major, disabled: true, placeholder: Sgtn.t('users.Computer.Science', 'views') %>
<% end %>
